<div class="min-h-screen bg-gray-50" data-controller="cart upsell" data-upsell-restaurant-slug-value="<%= @restaurant.slug %>" data-upsell-currency-value="<%= @restaurant.currency %>">
  <!-- Header -->
  <header class="sticky top-0 z-40 bg-white shadow-sm border-b border-gray-200">
    <div class="max-w-4xl mx-auto px-4 py-4">
      <div class="flex items-center justify-between">
        <div>
          <h1 class="text-2xl font-bold text-gray-900"><%= @restaurant.name %></h1>
          <p class="text-sm text-gray-600"><%= t('menu.table') %> <%= @table.label || @table.code %></p>
        </div>
        
        <!-- Language Switcher -->
        <div class="flex gap-2">
          <% I18n.available_locales.each do |locale| %>
            <%= link_to locale.upcase, 
                menu_path(@restaurant.slug, @table.code, locale: locale),
                class: "px-3 py-1 rounded-lg text-sm font-medium transition-colors #{I18n.locale == locale ? 'bg-gray-900 text-white' : 'bg-gray-100 text-gray-700 hover:bg-gray-200'}" %>
          <% end %>
        </div>
      </div>
    </div>
  </header>

  <!-- Main Content -->
  <main class="max-w-4xl mx-auto px-4 py-6 pb-32">
    <h2 class="text-3xl font-bold text-gray-900 mb-6"><%= t('menu.title') %></h2>

    <!-- Menu Categories -->
    <% @categories.each do |category| %>
      <section class="mb-8">
        <h3 class="text-2xl font-semibold text-gray-800 mb-4 pb-2 border-b-2 border-gray-300">
          <%= category.name %>
        </h3>

        <div class="space-y-4">
          <% category.menu_items.where(is_active: true).each do |item| %>
            <article class="bg-white rounded-lg shadow-sm hover:shadow-md transition-shadow p-4">
              <div class="flex gap-4">
                <!-- Item Image -->
                <% if item.image_url.present? %>
                  <div class="flex-shrink-0">
                    <%= image_tag item.image_url, 
                        alt: item.name,
                        class: "w-24 h-24 object-cover rounded-lg",
                        loading: "lazy" %>
                  </div>
                <% end %>

                <!-- Item Details -->
                <div class="flex-grow">
                  <div class="flex items-start justify-between mb-2">
                    <div class="flex-grow">
                      <h4 class="text-lg font-semibold text-gray-900" 
                          data-item-name="<%= item.id %>" 
                          data-name="<%= item.name %>">
                        <%= item.name %>
                      </h4>
                      
                      <% if item.description.present? %>
                        <p class="text-sm text-gray-600 mt-1"><%= item.description %></p>
                      <% end %>
                    </div>

                    <div class="flex-shrink-0 ml-4">
                      <span class="text-xl font-bold text-gray-900"
                            data-item-price="<%= item.id %>" 
                            data-cents="<%= item.price_cents %>">
                        <%= number_to_currency(item.price_cents/100.0, unit: @restaurant.currency == "EUR" ? "€" : @restaurant.currency, format: "%n %u") %>
                      </span>
                    </div>
                  </div>

                  <!-- Allergens -->
                  <% if item.allergens.present? && item.allergens.any? %>
                    <div class="flex flex-wrap gap-1 mb-3">
                      <span class="text-xs text-gray-500 mr-1"><%= t('menu.allergens') %>:</span>
                      <% item.allergens.each do |allergen| %>
                        <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-amber-100 text-amber-800">
                          <%= t("allergens.#{allergen}", default: allergen.titleize) %>
                        </span>
                      <% end %>
                    </div>
                  <% end %>

                  <!-- Add to Cart Button -->
                  <button 
                    data-action="click->cart#add" 
                    data-cart-item-id-param="<%= item.id %>"
                    class="inline-flex items-center px-4 py-2 bg-gray-900 text-white text-sm font-medium rounded-lg hover:bg-gray-800 active:bg-gray-700 transition-colors">
                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
                    </svg>
                    <%= t('menu.add_to_cart') %>
                  </button>
                </div>
              </div>
            </article>
          <% end %>
        </div>
      </section>
    <% end %>
  </main>

  <!-- Fixed Cart Footer -->
  <div class="fixed bottom-0 left-0 right-0 bg-white border-t border-gray-200 shadow-lg z-50">
    <div class="max-w-4xl mx-auto px-4 py-4">
      <!-- Cart Header -->
      <div class="flex items-center justify-between mb-3">
        <h3 class="text-lg font-semibold text-gray-900">
          <%= t('menu.cart') %>
          <span class="text-sm font-normal text-gray-600 ml-2" data-cart-target="itemCount"></span>
        </h3>
        <button 
          data-action="click->cart#toggleCart"
          data-cart-target="toggleButton"
          class="text-gray-600 hover:text-gray-900 transition-colors">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
          </svg>
        </button>
      </div>

      <!-- Cart Items (Collapsible) -->
      <div data-cart-target="cartItems" class="hidden mb-3 max-h-48 overflow-y-auto">
        <div data-cart-target="lines" class="space-y-2">
          <p class="text-sm text-gray-500 italic"><%= t('menu.cart_empty') %></p>
        </div>
      </div>

      <!-- Upsell Suggestions -->
      <div data-upsell-target="container" class="hidden mb-3 pb-3 border-b border-gray-200">
        <h4 class="text-sm font-semibold text-gray-700 mb-2"><%= t('menu.upsell_title') %></h4>
        <div data-upsell-target="items" class="grid grid-cols-1 gap-2"></div>
      </div>

      <!-- Cart Total & Checkout -->
      <div class="flex items-center justify-between gap-4">
        <div class="flex items-baseline gap-2">
          <span class="text-sm text-gray-600"><%= t('menu.total') %>:</span>
          <span data-cart-target="total" class="text-2xl font-bold text-gray-900">€0,00</span>
        </div>

        <%= form_with url: create_order_path(@restaurant.slug, @table.code), method: :post, data: { turbo: true, cart_target: "form", action: "submit->cart#checkout" }, class: "flex-shrink-0" do |f| %>
          <%= hidden_field_tag :items_json, "", data: { cart_target: "payload" } %>
          <%= submit_tag t('menu.order_now'), 
              class: "px-6 py-3 bg-green-600 text-white font-semibold rounded-lg hover:bg-green-700 active:bg-green-800 transition-colors shadow-md disabled:opacity-50 disabled:cursor-not-allowed",
              disabled: true,
              data: { cart_target: "submitButton" } %>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Toast Notification -->
  <div data-cart-target="toast" 
       class="hidden fixed top-20 right-4 bg-green-600 text-white px-6 py-3 rounded-lg shadow-lg z-50 animate-fade-in">
    <div class="flex items-center gap-2">
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
      </svg>
      <span data-cart-target="toastMessage"><%= t('menu.item_added') %></span>
    </div>
  </div>
</div>
