<div id="<%= dom_id(order) %>" class="border rounded-lg p-4 mb-4 bg-white shadow">
  <div class="flex justify-between items-start mb-2">
    <div>
      <h3 class="font-bold text-lg">Table <%= order.table.label %></h3>
      <p class="text-sm text-gray-600">Order #<%= order.id %></p>
      <p class="text-xs text-gray-500"><%= l(order.created_at, format: :short) %></p>
    </div>
    <div class="text-right">
      <p class="font-bold text-lg"><%= number_to_currency(order.total_cents / 100.0, unit: "â‚¬") %></p>
      <span class="inline-block px-2 py-1 text-xs rounded <%= order.status == 'paid' ? 'bg-green-100 text-green-800' : 'bg-yellow-100 text-yellow-800' %>">
        <%= order.status.upcase %>
      </span>
    </div>
  </div>

  <div class="border-t pt-2 mt-2">
    <% order.order_items.each do |item| %>
      <div class="flex justify-between py-1">
        <span><%= item.qty %>x <%= item.name_snapshot %></span>
        <span class="text-gray-600"><%= number_to_currency(item.line_total / 100.0, unit: "â‚¬") %></span>
      </div>
    <% end %>
  </div>

  <% if order.status != 'completed' %>
    <div class="mt-4 flex gap-2">
      <%= button_to "Mark Ready", order_status_path(order), method: :patch, params: { status: 'ready' }, 
          class: "px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700" %>
      <%= button_to "Complete", order_status_path(order), method: :patch, params: { status: 'completed' }, 
          class: "px-4 py-2 bg-green-600 text-white rounded hover:bg-green-700" %>
    </div>
  <% end %>
</div>
