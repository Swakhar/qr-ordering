<div class="min-h-screen bg-gray-50">
  <!-- Header -->
  <div class="bg-white shadow-sm">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
      <div class="flex justify-between items-center">
        <div>
          <h1 class="text-3xl font-bold text-gray-900"><%= @table.label %> QR Code</h1>
          <p class="mt-1 text-sm text-gray-600"><%= @restaurant.name %></p>
        </div>
        <%= link_to 'Back to QR Codes', admin_qr_codes_path(restaurant_id: @restaurant.id), 
            class: "px-4 py-2 bg-gray-600 text-white rounded-lg hover:bg-gray-700 transition-colors" %>
      </div>
    </div>
  </div>

  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
      <!-- QR Code Display -->
      <div class="bg-white rounded-lg shadow-sm p-8">
        <h2 class="text-xl font-bold text-gray-900 mb-6">QR Code Preview</h2>
        <div class="flex items-center justify-center bg-gray-50 p-8 rounded-lg">
          <%= image_tag @qr_url, alt: "QR Code for #{@table.label}", class: "w-full max-w-md" %>
        </div>
        
        <!-- Download Options -->
        <div class="mt-6 space-y-3">
          <h3 class="text-sm font-semibold text-gray-700 mb-3">Download Options</h3>
          <%= link_to download_admin_qr_code_path(@table, format: 'png'), 
              class: "flex items-center justify-between w-full px-4 py-3 bg-blue-50 hover:bg-blue-100 rounded-lg transition-colors group",
              data: { turbo: false } do %>
            <div class="flex items-center gap-3">
              <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
              </svg>
              <div class="text-left">
                <p class="font-semibold text-gray-900">PNG Image</p>
                <p class="text-xs text-gray-600">500Ã—500px, optimized for print</p>
              </div>
            </div>
            <svg class="w-5 h-5 text-gray-400 group-hover:text-blue-600 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"></path>
            </svg>
          <% end %>
          
          <%= link_to download_admin_qr_code_path(@table, format: 'svg'), 
              class: "flex items-center justify-between w-full px-4 py-3 bg-purple-50 hover:bg-purple-100 rounded-lg transition-colors group",
              data: { turbo: false } do %>
            <div class="flex items-center gap-3">
              <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01"></path>
              </svg>
              <div class="text-left">
                <p class="font-semibold text-gray-900">SVG Vector</p>
                <p class="text-xs text-gray-600">Scalable, perfect for large prints</p>
              </div>
            </div>
            <svg class="w-5 h-5 text-gray-400 group-hover:text-purple-600 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"></path>
            </svg>
          <% end %>
        </div>
      </div>

      <!-- Table Information -->
      <div class="space-y-6">
        <div class="bg-white rounded-lg shadow-sm p-6">
          <h2 class="text-xl font-bold text-gray-900 mb-4">Table Details</h2>
          <dl class="space-y-3">
            <div>
              <dt class="text-sm font-medium text-gray-600">Table Name</dt>
              <dd class="mt-1 text-lg font-semibold text-gray-900"><%= @table.label %></dd>
            </div>
            <div>
              <dt class="text-sm font-medium text-gray-600">Table Code</dt>
              <dd class="mt-1 text-lg font-mono font-semibold text-gray-900"><%= @table.code %></dd>
            </div>
            <div>
              <dt class="text-sm font-medium text-gray-600">Restaurant</dt>
              <dd class="mt-1 text-lg font-semibold text-gray-900"><%= @restaurant.name %></dd>
            </div>
          </dl>
        </div>

        <div class="bg-white rounded-lg shadow-sm p-6">
          <h2 class="text-xl font-bold text-gray-900 mb-4">Menu URL</h2>
          <div class="bg-gray-50 rounded-lg p-4">
            <p class="text-sm font-mono text-gray-700 break-all"><%= @url %></p>
          </div>
          <button onclick="navigator.clipboard.writeText('<%= @url %>')" 
                  class="mt-4 w-full px-4 py-2 bg-gray-600 text-white rounded-lg hover:bg-gray-700 transition-colors font-medium">
            Copy URL
          </button>
        </div>

        <div class="bg-blue-50 rounded-lg p-6 border border-blue-200">
          <h3 class="text-sm font-semibold text-blue-900 mb-2">ðŸ’¡ Printing Tips</h3>
          <ul class="text-sm text-blue-800 space-y-1">
            <li>â€¢ Use PNG format for standard prints</li>
            <li>â€¢ Use SVG for large format prints (posters, banners)</li>
            <li>â€¢ Ensure minimum 2cm quiet zone around QR code</li>
            <li>â€¢ Test scan before final print</li>
            <li>â€¢ Avoid laminating with glossy finish</li>
          </ul>
        </div>
      </div>
    </div>

    <!-- Test Scan Section -->
    <div class="mt-8 bg-white rounded-lg shadow-sm p-6">
      <h2 class="text-xl font-bold text-gray-900 mb-4">Test the QR Code</h2>
      <p class="text-gray-600 mb-4">
        Scan this QR code with your phone camera to test it. The menu should open automatically.
      </p>
      <%= link_to @url, target: '_blank',
          class: "inline-flex items-center gap-2 px-6 py-3 bg-green-600 text-white rounded-lg hover:bg-green-700 transition-colors font-medium" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
        </svg>
        Open Menu
      <% end %>
    </div>
  </div>
</div>

<script>
  // Copy URL feedback
  document.querySelectorAll('[onclick*="clipboard"]').forEach(button => {
    button.addEventListener('click', () => {
      const originalText = button.textContent;
      button.textContent = 'Copied!';
      button.classList.add('bg-green-600', 'hover:bg-green-700');
      button.classList.remove('bg-gray-600', 'hover:bg-gray-700');
      
      setTimeout(() => {
        button.textContent = originalText;
        button.classList.remove('bg-green-600', 'hover:bg-green-700');
        button.classList.add('bg-gray-600', 'hover:bg-gray-700');
      }, 2000);
    });
  });
</script>
