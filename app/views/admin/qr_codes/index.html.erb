<div class="min-h-screen bg-gray-50">
  <!-- Header -->
  <div class="bg-white shadow-sm">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
      <div class="flex justify-between items-center">
        <div>
          <h1 class="text-3xl font-bold text-gray-900">QR Code Management</h1>
          <p class="mt-1 text-sm text-gray-600">Generate and download QR codes for tables</p>
        </div>
        <div class="flex gap-3">
          <%= link_to 'Dashboard', admin_dashboard_path, class: "px-4 py-2 bg-gray-600 text-white rounded-lg hover:bg-gray-700 transition-colors" %>
          <%= link_to 'Rails Admin', rails_admin_path, class: "px-4 py-2 bg-gray-600 text-white rounded-lg hover:bg-gray-700 transition-colors" %>
        </div>
      </div>
    </div>
  </div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Restaurant Selector -->
    <div class="bg-white rounded-lg shadow-sm p-6 mb-8">
      <%= form_with url: admin_qr_codes_path, method: :get, class: "flex gap-4 items-end" do |f| %>
        <div class="flex-1">
          <label class="block text-sm font-medium text-gray-700 mb-2">Select Restaurant</label>
          <%= select_tag :restaurant_id, 
              options_from_collection_for_select(@restaurants, :id, :name, @selected_restaurant&.id),
              class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
        </div>
        <%= submit_tag 'Select', class: "px-6 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors font-medium" %>
        
        <% if @selected_restaurant %>
          <%= link_to 'Download All (ZIP)', 
              download_all_admin_qr_codes_path(restaurant_id: @selected_restaurant.id),
              class: "px-6 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 transition-colors font-medium inline-flex items-center gap-2",
              data: { turbo: false } %>
        <% end %>
      <% end %>
    </div>

    <% if @selected_restaurant %>
      <% if @selected_restaurant.tables.any? %>
        <!-- QR Codes Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          <% @selected_restaurant.tables.order(:label).each do |table| %>
            <div class="bg-white rounded-lg shadow-sm overflow-hidden">
              <!-- QR Code Preview -->
              <div class="p-6 bg-gray-50 flex items-center justify-center">
                <%= image_tag qr_path(restaurant_slug: @selected_restaurant.slug, table_code: table.code, format: :png),
                    alt: "QR Code for #{table.label}",
                    class: "w-48 h-48 object-contain" %>
              </div>
              
              <!-- Table Info -->
              <div class="p-6 border-t border-gray-200">
                <h3 class="text-lg font-bold text-gray-900"><%= table.label %></h3>
                <p class="text-sm text-gray-600 mt-1">Code: <span class="font-mono"><%= table.code %></span></p>
                
                <!-- Action Buttons -->
                <div class="mt-4 flex gap-2">
                  <%= link_to 'PNG', 
                      download_admin_qr_code_path(table, format: 'png'),
                      class: "flex-1 px-4 py-2 bg-blue-600 text-white text-center text-sm font-semibold rounded-lg hover:bg-blue-700 transition-colors",
                      data: { turbo: false } %>
                  <%= link_to 'SVG', 
                      download_admin_qr_code_path(table, format: 'svg'),
                      class: "flex-1 px-4 py-2 bg-purple-600 text-white text-center text-sm font-semibold rounded-lg hover:bg-purple-700 transition-colors",
                      data: { turbo: false } %>
                  <%= link_to 'Preview', 
                      admin_qr_code_path(table),
                      class: "flex-1 px-4 py-2 bg-gray-600 text-white text-center text-sm font-semibold rounded-lg hover:bg-gray-700 transition-colors" %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="bg-white rounded-lg shadow-sm p-12 text-center">
          <svg class="mx-auto h-16 w-16 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
          </svg>
          <h3 class="mt-4 text-lg font-medium text-gray-900">No tables found</h3>
          <p class="mt-1 text-sm text-gray-500">Create tables in Rails Admin to generate QR codes</p>
          <%= link_to 'Go to Rails Admin', rails_admin_path, class: "mt-4 inline-block px-6 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors" %>
        </div>
      <% end %>
    <% else %>
      <div class="bg-white rounded-lg shadow-sm p-12 text-center">
        <p class="text-gray-500 text-lg">No restaurant selected. Please create a restaurant first.</p>
      </div>
    <% end %>
  </div>
</div>
