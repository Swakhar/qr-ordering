<div class="min-h-screen bg-gray-50">
  <!-- Header -->
  <div class="bg-white shadow-sm">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
      <div class="flex justify-between items-center">
        <div>
          <h1 class="text-3xl font-bold text-gray-900">Restaurant Analytics</h1>
          <p class="mt-1 text-sm text-gray-600">Sales performance and insights</p>
        </div>
        <div class="flex gap-3">
          <%= link_to 'Rails Admin', rails_admin_path, class: "px-4 py-2 bg-gray-600 text-white rounded-lg hover:bg-gray-700 transition-colors" %>
          <%= link_to 'Kitchen Display', kitchen_path(@selected_restaurant.slug), class: "px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors" %>
        </div>
      </div>
    </div>
  </div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Restaurant & Date Filter -->
    <div class="bg-white rounded-lg shadow-sm p-6 mb-8">
      <%= form_with url: admin_dashboard_path, method: :get, class: "flex flex-wrap gap-4 items-end" do |f| %>
        <div class="flex-1 min-w-[200px]">
          <label class="block text-sm font-medium text-gray-700 mb-2">Restaurant</label>
          <%= select_tag :restaurant_id, 
              options_from_collection_for_select(@restaurants, :id, :name, @selected_restaurant&.id),
              class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
        </div>
        
        <div class="flex-1 min-w-[150px]">
          <label class="block text-sm font-medium text-gray-700 mb-2">Start Date</label>
          <%= date_field_tag :start_date, @start_date, 
              class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
        </div>
        
        <div class="flex-1 min-w-[150px]">
          <label class="block text-sm font-medium text-gray-700 mb-2">End Date</label>
          <%= date_field_tag :end_date, @end_date, 
              class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
        </div>
        
        <%= submit_tag 'Filter', class: "px-6 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors font-medium" %>
      <% end %>
    </div>

    <% if @selected_restaurant %>
      <!-- Key Metrics -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
        <!-- Total Revenue -->
        <div class="bg-white rounded-lg shadow-sm p-6">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm font-medium text-gray-600">Total Revenue</p>
              <p class="text-3xl font-bold text-gray-900 mt-2">€<%= number_with_precision(@total_revenue, precision: 2) %></p>
            </div>
            <div class="w-12 h-12 bg-green-100 rounded-full flex items-center justify-center">
              <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
          </div>
        </div>

        <!-- Total Orders -->
        <div class="bg-white rounded-lg shadow-sm p-6">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm font-medium text-gray-600">Total Orders</p>
              <p class="text-3xl font-bold text-gray-900 mt-2"><%= @total_orders %></p>
            </div>
            <div class="w-12 h-12 bg-blue-100 rounded-full flex items-center justify-center">
              <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
              </svg>
            </div>
          </div>
        </div>

        <!-- Average Order Value -->
        <div class="bg-white rounded-lg shadow-sm p-6">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm font-medium text-gray-600">Avg. Order Value</p>
              <p class="text-3xl font-bold text-gray-900 mt-2">€<%= number_with_precision(@average_order_value, precision: 2) %></p>
            </div>
            <div class="w-12 h-12 bg-purple-100 rounded-full flex items-center justify-center">
              <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
              </svg>
            </div>
          </div>
        </div>

        <!-- Pending Payments -->
        <div class="bg-white rounded-lg shadow-sm p-6">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm font-medium text-gray-600">Pending Payment</p>
              <p class="text-3xl font-bold text-gray-900 mt-2">€<%= number_with_precision(@pending_payment, precision: 2) %></p>
            </div>
            <div class="w-12 h-12 bg-orange-100 rounded-full flex items-center justify-center">
              <svg class="w-6 h-6 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
          </div>
        </div>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-8">
        <!-- Daily Revenue Chart -->
        <div class="bg-white rounded-lg shadow-sm p-6">
          <h2 class="text-xl font-bold text-gray-900 mb-4">Daily Revenue</h2>
          <div class="space-y-3">
            <% max_revenue = @daily_revenue.map { |date, revenue| revenue }.max || 1 %>
            <% @daily_revenue.each do |date, revenue| %>
              <div>
                <div class="flex justify-between text-sm mb-1">
                  <span class="text-gray-600"><%= date.strftime('%b %d') %></span>
                  <span class="font-semibold text-gray-900">€<%= number_with_precision(revenue, precision: 2) %></span>
                </div>
                <div class="w-full bg-gray-200 rounded-full h-2">
                  <div class="bg-blue-600 h-2 rounded-full transition-all" style="width: <%= (revenue / max_revenue * 100).round %>%"></div>
                </div>
              </div>
            <% end %>
            <% if @daily_revenue.empty? %>
              <p class="text-gray-500 text-center py-8">No data for selected period</p>
            <% end %>
          </div>
        </div>

        <!-- Order Status Breakdown -->
        <div class="bg-white rounded-lg shadow-sm p-6">
          <h2 class="text-xl font-bold text-gray-900 mb-4">Order Status</h2>
          <div class="space-y-4">
            <% total_status_orders = @orders_by_status.values.sum.to_f %>
            <% total_status_orders = 1 if total_status_orders == 0 %>
            <% @orders_by_status.each do |status, count| %>
              <% percentage = (count / total_status_orders * 100).round %>
              <div>
                <div class="flex justify-between text-sm mb-1">
                  <span class="font-medium text-gray-700 capitalize"><%= status %></span>
                  <span class="text-gray-600"><%= count %> (<%= percentage %>%)</span>
                </div>
                <div class="w-full bg-gray-200 rounded-full h-2">
                  <div class="h-2 rounded-full transition-all <%= 
                    case status
                    when 'paid' then 'bg-green-500'
                    when 'served' then 'bg-gray-500'
                    when 'ready' then 'bg-blue-500'
                    when 'preparing' then 'bg-yellow-500'
                    else 'bg-orange-500'
                    end %>" style="width: <%= percentage %>%"></div>
                </div>
              </div>
            <% end %>
            <% if @orders_by_status.empty? %>
              <p class="text-gray-500 text-center py-8">No orders for selected period</p>
            <% end %>
          </div>
        </div>
      </div>

      <!-- Top Selling Items -->
      <div class="bg-white rounded-lg shadow-sm p-6 mb-8">
        <h2 class="text-xl font-bold text-gray-900 mb-4">Top Selling Items</h2>
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Item</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Quantity Sold</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Revenue</th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% @top_items.each do |item| %>
                <tr>
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900"><%= item.name_snapshot %></td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600"><%= item.total_qty %></td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 font-semibold">€<%= number_with_precision(item.total_revenue / 100.0, precision: 2) %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
          <% if @top_items.empty? %>
            <p class="text-gray-500 text-center py-8">No items sold in selected period</p>
          <% end %>
        </div>
      </div>

      <!-- Recent Orders -->
      <div class="bg-white rounded-lg shadow-sm p-6">
        <h2 class="text-xl font-bold text-gray-900 mb-4">Recent Orders</h2>
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Order ID</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Table</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Items</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Total</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Created</th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% @recent_orders.each do |order| %>
                <tr>
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">#<%= order.id %></td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600"><%= order.table.label %></td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600"><%= order.order_items.sum(:qty) %></td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 font-semibold">€<%= number_with_precision(order.total_cents / 100.0, precision: 2) %></td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full <%= 
                      case order.status
                      when 'paid' then 'bg-green-100 text-green-800'
                      when 'served' then 'bg-gray-100 text-gray-800'
                      when 'ready' then 'bg-blue-100 text-blue-800'
                      when 'preparing' then 'bg-yellow-100 text-yellow-800'
                      else 'bg-orange-100 text-orange-800'
                      end %>">
                      <%= order.status.capitalize %>
                    </span>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600"><%= time_ago_in_words(order.created_at) %> ago</td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    <% else %>
      <div class="bg-white rounded-lg shadow-sm p-12 text-center">
        <p class="text-gray-500 text-lg">No restaurant selected. Please create a restaurant first.</p>
      </div>
    <% end %>
  </div>
</div>
