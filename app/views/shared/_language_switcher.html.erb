<div class="language-switcher inline-flex items-center gap-2 bg-white/90 backdrop-blur-lg rounded-full p-1.5 shadow-lg border border-gray-200">
  <% I18n.available_locales.each do |locale| %>
    <% if locale == I18n.locale %>
      <span class="relative px-4 py-2 bg-gradient-to-r from-blue-600 to-purple-600 text-white rounded-full text-sm font-bold shadow-md">
        <span class="relative z-10"><%= locale.to_s.upcase %></span>
        <div class="absolute inset-0 bg-gradient-to-r from-purple-600 to-blue-600 rounded-full animate-pulse opacity-50"></div>
      </span>
    <% else %>
      <%= link_to locale.to_s.upcase, url_for(locale: locale), 
          class: "px-4 py-2 text-gray-700 hover:text-gray-900 rounded-full text-sm font-semibold hover:bg-gray-100 transition-all hover:scale-110" %>
    <% end %>
  <% end %>
</div>
