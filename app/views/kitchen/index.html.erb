<%= turbo_stream_from "kitchen:#{@restaurant.slug}" %>

<div class="min-h-screen bg-gray-100 p-6">
  <!-- Header -->
  <div class="max-w-7xl mx-auto mb-8">
    <div class="bg-white rounded-lg shadow-sm p-6">
      <div class="flex items-center justify-between">
        <div>
          <h1 class="text-3xl font-bold text-gray-900">Kitchen Display</h1>
          <p class="text-gray-600 mt-1"><%= @restaurant.name %></p>
        </div>
        <div class="flex items-center gap-4">
          <div class="text-center">
            <div class="text-3xl font-bold text-blue-600"><%= @orders.count %></div>
            <div class="text-sm text-gray-600">Active Orders</div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Orders Grid -->
  <div class="max-w-7xl mx-auto">
    <div id="orders" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% if @orders.any? %>
        <%= render @orders %>
      <% else %>
        <div class="col-span-full text-center py-12">
          <svg class="mx-auto h-24 w-24 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"></path>
          </svg>
          <h3 class="mt-4 text-lg font-medium text-gray-900">No active orders</h3>
          <p class="mt-1 text-sm text-gray-500">New orders will appear here automatically</p>
        </div>
      <% end %>
    </div>
  </div>
</div>
