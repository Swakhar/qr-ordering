<%= turbo_stream_from "kitchen:#{@restaurant.slug}" %>

<div class="min-h-screen bg-gradient-to-br from-orange-50 via-amber-50 to-yellow-50">
  <!-- Animated Background Elements -->
  <div class="fixed inset-0 overflow-hidden pointer-events-none">
    <div class="absolute top-20 right-20 w-96 h-96 bg-orange-300 rounded-full mix-blend-multiply filter blur-3xl opacity-20 animate-blob"></div>
    <div class="absolute bottom-20 left-20 w-96 h-96 bg-amber-300 rounded-full mix-blend-multiply filter blur-3xl opacity-20 animate-blob animation-delay-2000"></div>
    <div class="absolute top-1/2 left-1/2 w-96 h-96 bg-yellow-300 rounded-full mix-blend-multiply filter blur-3xl opacity-20 animate-blob animation-delay-4000"></div>
  </div>

  <div class="relative z-10 p-6">
    <!-- Modern Header with Glass Effect -->
    <div class="max-w-7xl mx-auto mb-8 animate-fade-in-down">
      <div class="bg-white/80 backdrop-blur-xl rounded-2xl shadow-2xl border border-white/20 p-8">
        <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-6">
          <div>
            <div class="inline-flex items-center gap-3 px-4 py-2 bg-gradient-to-r from-orange-500 to-amber-500 rounded-full mb-3">
              <svg class="w-5 h-5 text-white animate-pulse" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
              </svg>
              <span class="text-white font-semibold text-sm">LIVE</span>
            </div>
            <h1 class="text-4xl md:text-5xl font-extrabold text-transparent bg-clip-text bg-gradient-to-r from-orange-600 to-amber-600 mb-2">Kitchen Display</h1>
            <p class="text-lg text-gray-700 font-medium"><%= @restaurant.name %></p>
          </div>
          
          <div class="flex flex-wrap gap-4">
            <!-- Active Orders Counter -->
            <div class="bg-gradient-to-br from-blue-500 to-blue-600 rounded-2xl p-6 shadow-xl hover:scale-105 transition-transform">
              <div class="text-center">
                <div class="text-5xl font-extrabold text-white mb-1"><%= @orders.count %></div>
                <div class="text-sm text-blue-100 font-semibold uppercase tracking-wide">Active Orders</div>
              </div>
            </div>
            
            <!-- Status Breakdown -->
            <div class="bg-gradient-to-br from-purple-500 to-purple-600 rounded-2xl p-6 shadow-xl hover:scale-105 transition-transform">
              <div class="text-center">
                <div class="text-5xl font-extrabold text-white mb-1"><%= @orders.where(status: 'preparing').count %></div>
                <div class="text-sm text-purple-100 font-semibold uppercase tracking-wide">In Progress</div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Orders Grid with Staggered Animation -->
    <div class="max-w-7xl mx-auto animate-fade-in-up animation-delay-200">
      <div id="orders" class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-6">
      <% if @orders.any? %>
        <%= render @orders %>
      <% else %>
        <div class="col-span-full text-center py-20 animate-fade-in">
          <div class="bg-white/60 backdrop-blur-lg rounded-3xl p-12 inline-block border-2 border-dashed border-gray-300">
            <div class="w-32 h-32 mx-auto bg-gradient-to-br from-gray-200 to-gray-300 rounded-full flex items-center justify-center mb-6 animate-pulse">
              <svg class="h-16 w-16 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"></path>
              </svg>
            </div>
            <h3 class="text-2xl font-bold text-gray-900 mb-2">All Caught Up! ðŸŽ‰</h3>
            <p class="text-gray-600 text-lg">No active orders right now</p>
            <p class="text-sm text-gray-500 mt-2">New orders will appear here automatically with real-time updates</p>
          </div>
        </div>
      <% end %>
      </div>
    </div>
  </div>
</div>
