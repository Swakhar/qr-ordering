<div id="<%= dom_id(order) %>" class="group relative bg-white/90 backdrop-blur-lg rounded-2xl shadow-xl hover:shadow-2xl transition-all duration-300 overflow-hidden border-2 <%= order.status == 'open' ? 'border-blue-300 hover:border-blue-400' : order.status == 'preparing' ? 'border-yellow-300 hover:border-yellow-400 animate-pulse' : order.status == 'ready' ? 'border-purple-300 hover:border-purple-400' : 'border-green-300 hover:border-green-400' %> hover:scale-105 animate-scale-in\">
  <!-- Status Strip -->\n  <div class=\"absolute top-0 left-0 right-0 h-2 <%= order.status == 'open' ? 'bg-gradient-to-r from-blue-500 to-blue-600' : order.status == 'preparing' ? 'bg-gradient-to-r from-yellow-500 to-orange-500' : order.status == 'ready' ? 'bg-gradient-to-r from-purple-500 to-pink-500' : 'bg-gradient-to-r from-green-500 to-emerald-500' %>\"></div>
  
  <div class=\"p-6 pt-8\">
    <!-- Order Header -->\n    <div class=\"flex items-start justify-between mb-6\">\n      <div class=\"flex-1\">\n        <div class=\"flex items-center gap-3 mb-2\">\n          <h3 class=\"text-2xl font-extrabold text-gray-900\">Order #<%= order.id %></h3>\n          <span class=\"inline-flex items-center gap-1.5 px-3 py-1 rounded-full text-xs font-bold uppercase tracking-wider <%= order.status == 'open' ? 'bg-blue-100 text-blue-800' : order.status == 'preparing' ? 'bg-yellow-100 text-yellow-800' : order.status == 'ready' ? 'bg-purple-100 text-purple-800' : 'bg-green-100 text-green-800' %>\">\n            <span class=\"w-2 h-2 rounded-full <%= order.status == 'open' ? 'bg-blue-500' : order.status == 'preparing' ? 'bg-yellow-500 animate-pulse' : order.status == 'ready' ? 'bg-purple-500' : 'bg-green-500' %>\"></span>\n            <%= order.status %>\n          </span>\n        </div>\n        \n        <div class=\"flex items-center gap-2 text-sm text-gray-600\">\n          <svg class=\"w-4 h-4\" fill=\"none\" stroke=\"currentColor\" viewBox=\"0 0 24 24\">\n            <path stroke-linecap=\"round\" stroke-linejoin=\"round\" stroke-width=\"2\" d=\"M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z\"></path>\n          </svg>\n          <span class=\"font-medium\"><%= time_ago_in_words(order.created_at) %> ago</span>\n        </div>\n      </div>\n      \n      <!-- Table Info -->\n      <div class=\"ml-4 text-right\">\n        <div class=\"inline-flex items-center gap-2 px-4 py-2 bg-gradient-to-br from-gray-100 to-gray-200 rounded-xl\">\n          <svg class=\"w-5 h-5 text-gray-600\" fill=\"none\" stroke=\"currentColor\" viewBox=\"0 0 24 24\">\n            <path stroke-linecap=\"round\" stroke-linejoin=\"round\" stroke-width=\"2\" d=\"M3 10h18M3 14h18m-9-4v8m-7 0h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z\"></path>\n          </svg>\n          <span class=\"font-bold text-gray-900\"><%= order.table.label %></span>\n        </div>\n      </div>\n    </div>

    <!-- Order Items with Beautiful Cards -->\n    <div class=\"bg-gradient-to-br from-gray-50 to-gray-100 rounded-xl p-4 mb-6\">\n      <h4 class=\"text-xs font-semibold text-gray-500 uppercase tracking-wider mb-3 flex items-center gap-2\">\n        <svg class=\"w-4 h-4\" fill=\"none\" stroke=\"currentColor\" viewBox=\"0 0 24 24\">\n          <path stroke-linecap=\"round\" stroke-linejoin=\"round\" stroke-width=\"2\" d=\"M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2\"></path>\n        </svg>\n        Items Ordered\n      </h4>\n      <div class=\"space-y-2\">\n        <% order.order_items.each do |item| %>\n          <div class=\"flex items-center gap-3 bg-white rounded-lg p-3 shadow-sm hover:shadow-md transition-shadow\">\n            <div class=\"flex-shrink-0 w-10 h-10 bg-gradient-to-br from-orange-500 to-amber-500 rounded-lg flex items-center justify-center\">\n              <span class=\"text-white font-bold text-lg\"><%= item.qty %></span>\n            </div>\n            <div class=\"flex-1\">\n              <p class=\"font-semibold text-gray-900 text-lg\"><%= item.name_snapshot %></p>\n              <% if item.notes.present? %>\n                <p class=\"text-sm text-gray-600 mt-1 italic\">\ud83d\udcac <%= item.notes %></p>\n              <% end %>\n            </div>\n            <div class=\"text-right\">\n              <p class=\"text-lg font-bold text-gray-900\">€<%= sprintf('%.2f', item.price_cents * item.qty / 100.0) %></p>\n            </div>\n          </div>\n        <% end %>\n      </div>\n    </div>

    <!-- Payment Progress -->\n    <div class=\"mb-6\">\n      <div class=\"flex items-center justify-between text-sm mb-2\">\n        <span class=\"font-medium text-gray-700\">Payment Progress</span>\n        <span class=\"font-bold text-gray-900\">€<%= sprintf('%.2f', order.paid_cents / 100.0) %> / €<%= sprintf('%.2f', order.total_cents / 100.0) %></span>\n      </div>\n      <div class=\"h-3 bg-gray-200 rounded-full overflow-hidden\">\n        <div class=\"h-full bg-gradient-to-r from-green-500 to-emerald-500 rounded-full transition-all duration-500\" \n             style=\"width: <%= ((order.paid_cents.to_f / order.total_cents) * 100).round %>%\"></div>\n      </div>\n      <p class=\"text-xs text-gray-600 mt-1\">\n        <%= ((order.paid_cents.to_f / order.total_cents) * 100).round %>% paid\n      </p>\n    </div>

    <!-- Action Buttons -->\n    <% if staff_signed_in? %>\n      <div class=\"grid grid-cols-2 gap-3\">\n        <% if order.status == 'open' || order.status == 'preparing' %>\n          <%= button_to order_status_path(order, status: \"ready\"), method: :patch, data: { turbo_stream: true },\n              class: \"group relative px-6 py-4 bg-gradient-to-r from-purple-600 to-pink-600 text-white font-bold rounded-xl hover:from-purple-700 hover:to-pink-700 transition-all hover:scale-105 shadow-lg hover:shadow-xl overflow-hidden\" do %>\n            <span class=\"relative z-10 flex items-center justify-center gap-2\">\n              <svg class=\"w-5 h-5\" fill=\"none\" stroke=\"currentColor\" viewBox=\"0 0 24 24\">\n                <path stroke-linecap=\"round\" stroke-linejoin=\"round\" stroke-width=\"2\" d=\"M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z\"></path>\n              </svg>\n              Mark Ready\n            </span>\n            <div class=\"absolute inset-0 bg-gradient-to-r from-pink-600 to-purple-600 opacity-0 group-hover:opacity-100 transition-opacity\"></div>\n          <% end %>\n        <% end %>\n        \n        <% if order.status == 'ready' || order.status == 'preparing' %>\n          <%= button_to order_status_path(order, status: \"served\"), method: :patch, data: { turbo_stream: true },\n              class: \"group relative px-6 py-4 bg-gradient-to-r from-green-600 to-emerald-600 text-white font-bold rounded-xl hover:from-green-700 hover:to-emerald-700 transition-all hover:scale-105 shadow-lg hover:shadow-xl overflow-hidden\" do %>\n            <span class=\"relative z-10 flex items-center justify-center gap-2\">\n              <svg class=\"w-5 h-5\" fill=\"none\" stroke=\"currentColor\" viewBox=\"0 0 24 24\">\n                <path stroke-linecap=\"round\" stroke-linejoin=\"round\" stroke-width=\"2\" d=\"M5 13l4 4L19 7\"></path>\n              </svg>\n              Complete\n            </span>\n            <div class=\"absolute inset-0 bg-gradient-to-r from-emerald-600 to-green-600 opacity-0 group-hover:opacity-100 transition-opacity\"></div>\n          <% end %>\n        <% end %>\n      </div>\n    <% end %>\n  </div>\n  \n  <!-- Decorative Corner -->\n  <div class=\"absolute bottom-0 right-0 w-32 h-32 opacity-10\">\n    <svg viewBox=\"0 0 100 100\" class=\"<%= order.status == 'open' ? 'text-blue-500' : order.status == 'preparing' ? 'text-yellow-500' : order.status == 'ready' ? 'text-purple-500' : 'text-green-500' %>\">\n      <circle cx=\"100\" cy=\"100\" r=\"80\" fill=\"currentColor\"/>\n    </svg>\n  </div>\n</div>
